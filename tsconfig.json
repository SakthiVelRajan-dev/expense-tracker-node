    {
      "compilerOptions": {
        "target": "es2018",
        "module": "nodenext",
        "outDir": "./build",
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths": {
          "@Config/*": ["src/Config/*"],
          "@Constants/*": ["src/Constants/*"],
          "@interface/*": ["src/interface/*"],
          "@Middleware/*": ["src/Middleware/*"],
          "@Router/*": ["src/Routers/*"],
          "@Schema/*": ["src/Schema/*"],
          "@utils/*": ["src/utils/*"],
          "@crons/*": ["src/Crons/*"],
          "@Mail/*": ["src/Mail/*"]
        }
      },
      "include": ["src/**/*", "src/app.ts"],
      "exclude": ["node_modules"]
    }